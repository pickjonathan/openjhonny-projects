# OpenClaw Environment Configuration
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# ── Gateway ──────────────────────────────────────────────────────────────────
# Generate a secure random token: openssl rand -hex 32
OPENCLAW_GATEWAY_TOKEN=your_secure_token_here

# Port the gateway listens on (host-side)
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790

# loopback = localhost only | lan = local network | tailnet = Tailscale
OPENCLAW_GATEWAY_BIND=loopback

# Persistent state directory on the host (auth, devices, sessions)
OPENCLAW_CONFIG_DIR=~/.openclaw

# ── AI Providers (set at least one) ─────────────────────────────────────────
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
OPENROUTER_API_KEY=

# Optional: Claude AI web session (for Claude-via-web-UI access)
CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=

# ── Channels ─────────────────────────────────────────────────────────────────
# Telegram: create a bot at https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Discord (optional)
DISCORD_BOT_TOKEN=

# Slack (optional)
SLACK_BOT_TOKEN=

# ── Build Options ─────────────────────────────────────────────────────────────
# Set to 1 to install Chromium for browser/web tools (adds ~500MB, recommended)
OPENCLAW_INSTALL_BROWSER=1

# Set to "true" to regenerate auth profiles from env vars on every startup
FORCE_REGENERATE_AUTH=false
